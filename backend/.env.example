# Server Configuration
PORT=5001
NODE_ENV=development

# Security Settings
FRONTEND_URL=http://localhost:3000
MAX_FILE_SIZE=10485760 # 10MB in bytes
RATE_LIMIT_WINDOW_MS=900000 # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100

# Firebase Configuration
FIREBASE_API_KEY=your-firebase-api-key
FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
FIREBASE_PROJECT_ID=your-project-id
FIREBASE_STORAGE_BUCKET=your-project.appspot.com
FIREBASE_MESSAGING_SENDER_ID=your-sender-id
FIREBASE_APP_ID=your-app-id

# Google OAuth Client Credentials (Firebase Web)
FIREBASE_WEB_CLIENT_ID=your-client-id
FIREBASE_WEB_CLIENT_SECRET=your-client-secret

# API Configuration
API_VERSION=v1
DEFAULT_PLAN_LIMIT=100 # Default daily API request limit for new users

# Note: For production environment, use service account credentials in .env.production

# CORS Configuration
ALLOWED_ORIGINS=https://exifquarter.com,https://www.exifquarter.com

# Redis Configuration
REDIS_URL=redis://localhost:6379 